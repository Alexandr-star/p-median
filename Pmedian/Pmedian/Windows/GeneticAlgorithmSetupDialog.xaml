<Window x:Class="Pmedian.Windows.GeneticAlgorithmSetupDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:model="clr-namespace:Pmedian.Model.Enums"
      xmlns:local="clr-namespace:Pmedian.Windows"
      mc:Ignorable="d"
      SizeToContent="WidthAndHeight"
      MinWidth="300"
      MinHeight="100"
      WindowStyle="SingleBorderWindow"
      ResizeMode="CanMinimize"
      Title="Genetic algorithm setting" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary Source="pack://application:,,,/Windows/Style/DialogWindowDictionary.xaml"/>
    </Window.Resources>

    <StackPanel Style="{StaticResource DialogMainPanel}">
        <StackPanel Style="{StaticResource DialogStackPanel}">
            <TextBlock Text="Algorithm" Style="{StaticResource DialogInputLabel}"/>
            <ComboBox Name="AlgorithmBox" Style="{StaticResource DialogInputField}"  HorizontalContentAlignment="Right"
                     ItemsSource="{Binding Source={model:Enumeration {x:Type model:GeneticAlgotithmMethod}}}" DisplayMemberPath="Description"
                SelectedValuePath="Value" SelectedIndex="0"/>
        </StackPanel>
        <StackPanel Style="{StaticResource DialogStackPanel}">
            <TextBlock Text="Number of iterations" Style="{StaticResource DialogInputLabel}"/>
            <xctk:IntegerUpDown Name="IterSize" Style="{StaticResource DialogInputField}" Value="1000" Minimum="1" Maximum="10000" Increment="10"/>
            <TextBlock Text="Size population" Style="{StaticResource DialogInputLabel}"/>
            <xctk:IntegerUpDown Name="PopSize" Style="{StaticResource DialogInputField}" Value="1000" Minimum="10" Maximum="12" Increment="1"/>
        </StackPanel>
        <Separator/>
        <StackPanel Style="{StaticResource DialogStackPanel}">
            <TextBlock Text="Crossover" Style="{StaticResource DialogInputLabel}"/>
            <ComboBox Name="CrossoverBox" Style="{StaticResource DialogInputField}" HorizontalContentAlignment="Right"
                     ItemsSource="{Binding Source={model:Enumeration {x:Type model:CrossoverMethod}}}" DisplayMemberPath="Description"
                SelectedValuePath="Value" SelectedIndex="0"/>
        </StackPanel>
        <StackPanel Style="{StaticResource DialogStackPanel}">
            <Slider Name="CrossoverSlider" Style="{StaticResource DialogSliderProbability}"/>
        </StackPanel>
        <Separator/>
        <StackPanel Style="{StaticResource DialogStackPanel}">
            <TextBlock Text="Mutation" Style="{StaticResource DialogInputLabel}"/>
            <ComboBox Name="MutationBox" Style="{StaticResource DialogInputField}" HorizontalContentAlignment="Right"
                     ItemsSource="{Binding Source={model:Enumeration {x:Type model:GraphGenerationMethod}}}" DisplayMemberPath="Description"
                SelectedValuePath="Value" SelectedIndex="0"/>
        </StackPanel>
        <StackPanel Style="{StaticResource DialogStackPanel}">
            <Slider Name="MutationSlider" Style="{StaticResource DialogSliderProbability}"/>
        </StackPanel>
        <Separator/>
        <StackPanel Style="{StaticResource DialogStackPanel}">
            <TextBlock Text="Selection" Style="{StaticResource DialogInputLabel}"/>
            <ComboBox Name="SelectionBox" Style="{StaticResource DialogInputField}" HorizontalContentAlignment="Right"
                     ItemsSource="{Binding Source={model:Enumeration {x:Type model:GraphGenerationMethod}}}" DisplayMemberPath="Description"
                SelectedValuePath="Value" SelectedIndex="0"/>
        </StackPanel>
        <StackPanel Style="{StaticResource DialogStackPanel}">
            <Slider Name="SelectionSlider" Style="{StaticResource DialogSliderProbability}"/>
        </StackPanel>
        <StackPanel Style="{StaticResource DialogActionPanel}">
            <Button Click="buttonOK_Click" Style="{StaticResource DialogOKButton}"/>
            <Button Click="buttonCancel_Click" Style="{StaticResource DialogCancelButton}"/>
        </StackPanel>

    </StackPanel>
</Window>
